# 本番環境設定
NODE_ENV=production
PORT=4000

# MongoDB設定（本番用）
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/threads_analysis
CORS_ORIGIN=https://instagram-marketing-app.vercel.app

# OpenAI API設定
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4

# JWT設定
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Stripe設定
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# SendGrid設定
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# セッション設定
SESSION_SECRET=your-super-secure-session-secret-key-here

# CORS設定
CORS_ORIGIN=https://yourdomain.com

# プラン設定
FREE_PLAN_CAPTION_LIMIT=10
PREMIUM_PLAN_CAPTION_LIMIT=100
ENTERPRISE_PLAN_CAPTION_LIMIT=1000

# レート制限設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ログ設定
LOG_LEVEL=info
LOG_FILE_PATH=./logs 